@page
@model MegaFilme.Pages.Filmes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Cadastro de Filmes</h2>

<p>
    <a asp-page="Create">Cadastrar filme</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    Nome do Filme
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CadastroFilmes[0].Ano)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CadastroFilmes[0].Descricao)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CadastroFilmes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
