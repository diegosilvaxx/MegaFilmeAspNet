@page
@model MegaFilme.Pages.Filmes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Filmes</h2>

<h4>Cadastro de Filmes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CadastroFilmes.Nome" class="control-label"></label>
                <input asp-for="CadastroFilmes.Nome" class="form-control" />
                <span asp-validation-for="CadastroFilmes.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CadastroFilmes.Ano" class="control-label"></label>
                <input type="datetime" asp-for="CadastroFilmes.Ano" class="form-control" />
                <span asp-validation-for="CadastroFilmes.Ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CadastroFilmes.Descricao" class="control-label"></label>
                <input asp-for="CadastroFilmes.Descricao" class="form-control" />
                <span asp-validation-for="CadastroFilmes.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CadastroFilmes.Genero" class="control-label">Gênero</label>
                <input asp-for="CadastroFilmes.Genero" class="form-control" />
                <span asp-validation-for="CadastroFilmes.Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
