@page
@model MegaFilme.Pages.Alocacao.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Alocação de Filmes</h2>

<h4>Alugar Filmes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AlocacaoFilmes.Nome" class="control-label"></label>
                <input asp-for="AlocacaoFilmes.Nome" class="form-control" />
                <span asp-validation-for="AlocacaoFilmes.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlocacaoFilmes.Cpf" class="control-label">CPF</label>
                <input asp-for="AlocacaoFilmes.Cpf" class="form-control" />
                <span asp-validation-for="AlocacaoFilmes.Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlocacaoFilmes.NomeFilme" class="control-label"> Nome do Filme</label>
                <input  asp-for="AlocacaoFilmes.NomeFilme" class="form-control" />
                <span asp-validation-for="AlocacaoFilmes.NomeFilme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlocacaoFilmes.DataEntrega" class="control-label">Data de Entrega</label>
                <input type="datetime-local" asp-for="AlocacaoFilmes.DataEntrega" class="form-control" />
                <span asp-validation-for="AlocacaoFilmes.DataEntrega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlocacaoFilmes.DataRetirada" class="control-label">Data de Retirada</label>
                <input  asp-for="AlocacaoFilmes.DataRetirada" class="form-control" />
                <span asp-validation-for="AlocacaoFilmes.DataRetirada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlocacaoFilmes.ValorDiaria" class="control-label">Valor da Diaria</label>
                <input value="4.00" asp-for="AlocacaoFilmes.ValorDiaria" class="form-control" />
                <span asp-validation-for="AlocacaoFilmes.ValorDiaria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlocacaoFilmes.ValorTotal" class="control-label">Valor Total</label>
                <input asp-for="AlocacaoFilmes.ValorTotal" class="form-control"/>
                <span asp-validation-for="AlocacaoFilmes.ValorTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Alugar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
