@page
@model MegaFilme.Pages.Clientes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Cadastro de Cliente</h2>

<p>
    <a asp-page="Create">Cadastrar novo Usuário</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CadastroCliente[0].Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CadastroCliente[0].Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CadastroCliente[0].Cidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CadastroCliente[0].Endereco)
                </th>
                <th>
                    Numero da Casa
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CadastroCliente[0].Cpf)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CadastroCliente[0].Email)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CadastroCliente) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumCasa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
